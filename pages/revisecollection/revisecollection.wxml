<!--pages/revisecollection/revisecollection.wxml-->
<view class='container'>
  <view class='all'>
    <view class='col txt'>
      <text class="txt1">藏家</text>
      <input placeholder='请输入' maxlength = "20" placeholder-style='color:#C6C6C6' bindblur="collectorsInput" value=""></input>
    </view>
    <view class='col txt'>
      <text class="txt1">交易机构</text>
      <input placeholder='请输入' maxlength = "20" placeholder-style='color:#C6C6C6' bindblur="institutionInput" value=""></input>
    </view>
    <view class='col txt'>
      <text class="txt1">价格</text>
      <input placeholder='请输入金额' maxlength = "9"  type="number" placeholder-style='color:#C6C6C6' bindblur="priceInput" value=""></input>
      <view class='occupy' catchtap="chooseMoneyTap"></view>
      <image class='arrows' src="/image/a/icon_8.png"></image>
    </view>
     <view class='col txt'>
      <text class="txt1">日期</text>
      <input placeholder='请填写日期 如:2008/01/25' maxlength = "20" placeholder-style='color:#C6C6C6' bindblur="dataInput" value=""></input>
      <!-- <view class='occupy'></view>
      <image class='arrows' src="/image/a/icon_8.png"></image> -->
    </view>
  </view>
  <view class='jz'>
    <view class='jz finish' catchtap="goreleaseTap">保存</view>
  </view>
</view>
