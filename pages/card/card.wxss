/* pages/card/card.wxss */

.container {
  height: 100%;
}

.card {
  width: 100%;
  height: 100%;
}

form {
  width: 100%;
  height: 100%;
}

.pic {
  width: 100%;
  height: 100%;
}

.card>image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.card .txt {
  position: fixed;
  top: 30%;
  right: 0;
}

.name {
  width: 100rpx;
  font-size: 80rpx;
   height: 300rpx;
}

.textarea-placeholder {
 
  width: 100rpx;
  color: pink;
}

.button {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  opacity: 0.5;
}

.button view {
  width: 210rpx;
  height: 76rpx;
  color: #fff;
  background-color: #000;
  opacity: 1;
  border-radius: 40rpx;
}

.btn1 {
  margin-right: 70rpx;
}
