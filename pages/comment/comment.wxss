.container {
  border-top: 1px solid #f0f0f0;
}

.frame {
  width: 90%;
  height: 122rpx;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  justify-content: space-between;
}

.title {
  font-size: 40rpx;
  letter-spacing: 0;
  line-height: 122rpx;
}

.icon {
  height: 122rpx;
}

.icon image {
  width: 12rpx;
  height: 21rpx;
}
.opus{
  width:100%;
}
.opus image {
  width:100%;
  height: 436rpx;  
  border:1rpx solid red;
   margin: 40rpx 0 0 0; 
}
.txt {
  /* height: 375rpx; */
}
.content {
  height: 300rpx;
  padding: 0 40rpx;
  overflow: hidden;
  font-size: 30rpx;
  line-height: 50rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 6;
  -webkit-box-orient: vertical;
}
